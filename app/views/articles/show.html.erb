<h2 align="center">Title: <%= @article.title %></h2>
    
<div class="well col-xs-8 col-xs-offset-2 ">
    <% if @article.user %>
    <ul class="listing">
    <div class="row center">
        <div class="col-md-4 col-md-offset-4">
            <li>Created by</li>
            <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
            <li class="article-title"><%= link_to @article.user.username, user_path(@article.user) %></l>
            <li><small><%= pluralize(@article.user.articles.count,"article") if @article.user.articles %></small></li>
        </div>
    </div>
</ul>
<% end %>
    <h4 class="center description"><strong>Description:</strong></h4>
    <hr> 
    <%= simple_format(@article.description) %>

  <div class="article-actions">
      
    <%= link_to "View All Articles", articles_path, class: "btn btn-xs btn-success" %>
    <% if logged_in? && current_user == @article.user %>
    <%= link_to "Delete This Article", article_path(@article), method: :delete, data: { comfirm:"Are you sure?"}, class: "btn btn-xs btn-danger" %>
    <%= link_to "Edit this Post", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
    <% end %>
  </div>
 </div>
  
