<h1>Edit Exisisting Article</h1>

<% if @article.errors.any? %>
<h2> The Following Errors are created</h2>
<ul>
<% @article.errors.full_messages.each do |msg| %>

<li><%= msg %></li>
<% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>

<p>
    <%= f.label :title %> </br>
    <%= f.text_field :title %>
</p>
<p>
    <%= f.label :description %> </br>
    <%= f.text_field :description %>
</p>
<p>
    <%= f.submit %>
</p>
<% end %>

<p>
    <%= link_to "Check the Whole List", articles_path  %>
</p>